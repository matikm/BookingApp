@model BookingApp.ViewModels.ObjectForRentViewModel

@{
    ViewData["Title"] = "Index";
}

<div class="jumbotron text-center bg-secondary ">
    <span class="header-icon material-icons">
        other_houses
    </span>
    <h1 class="text-white">Obiekty</h1>
</div>


<form asp-action="AddOrEdit" onsubmit="return jQueryAjaxPost(this);" autocomplete="off">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <div class="form-row">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.TextBoxFor(m => m.ObjectForRent.ObjectForRentId, new { @class = "d-none", })
            <div class="col-12 col-sm-2 p-2">
                @Html.TextBoxFor(m => m.ObjectForRent.Name, new { placeholder = "Name", @class = "form-control", })
                @Html.ValidationMessageFor(m => m.ObjectForRent.Name, "", new { @class = "text-danger" })
            </div>
            <div class="col-12 col-sm-6 p-2">
                @Html.TextBoxFor(m => m.ObjectForRent.Description, new { placeholder = "Description", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.ObjectForRent.Description, "", new { @class = "text-danger" })
            </div>
            <div class="col-12 col-sm-2 p-2">
                @Html.TextBoxFor(m => m.ObjectForRent.Photo, new { placeholder = "Photo", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.ObjectForRent.Photo, "", new { @class = "text-danger" })
            </div>
            <div class="col-12 col-sm-2 p-2">
                <button type="submit" id="addSubmit" class="btn btn-primary material-icons w-100">
                    <span class="material-icons">
                        add
                    </span>
                </button>
                <button type="submit" class="btn btn-success btn-edit material-icons d-none">
                    <span class="material-icons">
                        check
                    </span>
                </button>
                <a id="objectClearBtn" class="btn btn-danger btn-edit material-icons d-none">
                    <span class="material-icons">
                        clear
                    </span>
                </a>
            </div>
        </div>
    </div>
</form>   

<div id="view-all">
    @await Html.PartialAsync("ObjectForRentList", Model.ObjectForRents)
</div>

