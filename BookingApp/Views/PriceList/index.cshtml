@model BookingApp.ViewModels.PriceListViewModel

@{
    ViewData["Title"] = "index";
}

<h1>Cennik</h1>


@using (Html.BeginForm("Create", "PriceList", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <div class="form-row">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="col-12 col-sm-4 p-2">
                <input type="number" name="PricePerPeople.ObjectForRent.Id" data-val="true" id="PricePerPeople_ObjectForRent_Id" class="d-none" value="@Context.Request.RouteValues["id"]" />
                @Html.TextBoxFor(m => m.PricePerPeople.People, new { placeholder = "People", @class = "form-control", })
                @Html.ValidationMessageFor(m => m.PricePerPeople.People, "", new { @class = "text-danger" })
            </div>
            <div class="col-12 col-sm-4 p-2">
                @Html.TextBoxFor(m => m.PricePerPeople.Price, new { placeholder = "Price", @class = "form-control", })
                @Html.ValidationMessageFor(m => m.PricePerPeople.Price, "", new { @class = "text-danger" })
            </div>
            <div class="col-12 col-sm-4 p-2">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PricePerPeople.People)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PricePerPeople.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PriceList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.People)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id=@Context.Request.RouteValues["id"] asp-route-priceId="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
